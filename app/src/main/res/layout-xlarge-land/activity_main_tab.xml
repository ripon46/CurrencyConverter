<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/currencyconversionfragment"
        android:name="com.therap.amin.currencyconverter.Fragments.CurrencyConversionFragment"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"/>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"/>
    <fragment
        android:id="@+id/valuesaverfragment"
        android:name="com.therap.amin.currencyconverter.Fragments.CurrencyValueSaverFragment"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />
</LinearLayout>